@model PagedList.PagedList<DocTruyen.Models.EF.Story>
@using PagedList.Mvc
@using System.Text.RegularExpressions
<style>
    .parent-centered {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .centered {
        text-align: center;
    }
</style>
<!-- Tìm kiếm Begin -->
<div class="d-flex justify-content-center">
    <section class="hero hero-normal">
        <div class="container">
            <div class="row d-flex">
                <div class="col-lg-12 ">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form method="get" action="@Url.Action("Index")">
                                <input type="text" name="searchQuery" value="@Request.QueryString["searchQuery"]" placeholder="Tên truyện" />
                                <button type="submit" class="site-btn">SEARCH</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Tìm kiếm End -->


@foreach (var item in Model)
{
    <div class="parent-centered">
        <div>
            <table border="1" cellpadding="2" cellspacing="2" width="1000px">
                <tr>
                    <td rowspan="2" width="200px"> <img src="@item.image" width="200" /></td>
                    <td style="text-align: justify;" height="50px">
                        <br />
                        <p><a href="@Url.Action("Details", new { id = item.Id})">@item.Name</a></p>
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td style="text-align: justify;">
                        <p>
                            @{
                                var content = @item.Content;
                                var maxLength = 700; // Set your character limit

                                // Decode HTML entities
                                content = HttpUtility.HtmlDecode(content);

                                content = Regex.Replace(content, "<br\\s*/?>", "\n"); // Replace <br> with newline
                                content = Regex.Replace(content, "<.*?>", String.Empty); // Remove other HTML tags

                                // Truncate content if it exceeds maxLength
                                if (content.Length > maxLength) content = content.Substring(0, maxLength) + "...";

                            }
                            @content
                        </p>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
<div class="row">
    <div class="col-6"></div>
    <div class="col-6" style="text-align:right;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>


