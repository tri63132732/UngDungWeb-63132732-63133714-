@model Ogani.Models.EditAccountViewModel

@{
    ViewBag.Title = "Delete Account";
}

<h2>Delete Account</h2>

<div>
    <h4>Are you sure you want to delete this account?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <!-- Add other properties as needed -->
    </dl>

    @using (Html.BeginForm("Delete", "AccountAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <p>
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Index", "HomeAdmin", null, new { @class = "btn btn-default" })
        </p>
    }
</div>
