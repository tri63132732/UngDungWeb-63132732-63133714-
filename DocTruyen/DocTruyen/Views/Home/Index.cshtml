<link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">
<style>
    .container1 {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* Adjust the minimum and maximum width of columns */
        grid-gap: 20px; /* Increase the gap between grid items */
    }

    .card1 {
        border: 1px solid #ccc;
        padding: 15px;
        text-align: center;
        background-color: #f9f9f9; /* Add a background color */
        border-radius: 5px; /* Add rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
    }

        .card1 img {
            max-width: 100%;
            height: auto;
            border-radius: 5px; /* Add rounded corners to images */
        }

        .card1 h2 {
            font-size: 20px; /* Increase heading font size */
            font-weight: bold;
            margin-bottom: 10px; /* Adjust spacing */
            color: #333; /* Change heading color */
        }

        .card1 p {
            margin-bottom: 15px; /* Adjust spacing */
            color: #666; /* Change paragraph text color */
        }

        .card1 a {
            text-decoration: none; /* Remove underline from links */
            color: #007bff; /* Change link color */
        }

            .card1 a:hover {
                text-decoration: underline; /* Add underline on hover */
            }
</style>
